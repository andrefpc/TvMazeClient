<?xml version="1.0" encoding="utf-8"?>
<com.andrefpc.tvmazeclient.ui.xml_based.widget.ShimmerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shimmer_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.xml_based.show_details.ShowDetailsActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.xml_based.show_details.ShowDetailsActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/show_details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="20dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/episodes_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="@string/cast"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cast"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingStart="20dp"
                android:paddingEnd="12dp"
                android:paddingBottom="20dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</com.andrefpc.tvmazeclient.ui.xml_based.widget.ShimmerLayout>